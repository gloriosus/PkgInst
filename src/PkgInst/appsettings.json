{
  "AllowedHosts": "*",
  "BasePath": "PATH_TO_PACKAGES_FOLDER",
  "CompanyName": "YOUR_COMPANY_NAME",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
